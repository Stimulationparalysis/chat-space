%div.flash-box
%div.wrapper
  %div.chat-side
    %div.side-header
      %p.side-header__user-name
        kaz
      %ul.user-menu
        %li.user-menu__edit-user
          =link_to "/groups/new" do
            %i.fa.fa-edit
        %li.user-menu__new-group 
          =link_to "/users/1/edit" do
            %i.fa.fa-cog 
    %div.groups
      = link_to "/groups/1/messages" do 
        %div.group
          %p.group__group-name
            11
          %p.group__latest-message
            aaaa

  %div.chat-main
    %div.main-header
      %div.current-group
        %h2.current-group__name
          11
        %ul.member-list
          Memberï¼š
          %li.member-list__member
            kaz
      = link_to "/groups/1/edit" do
        %div.main-header__edit-btn
          Edit
    %div.messages
      %div.message
        %div.upper-info
          %p.upper-info__user
            kaz
          %p.upper-info__date
            2019/04/24(Wed) 00:09:34
        %p.message__text
          aaaa

    %div.form
      %form.new-message#new_message{action: "/groups/1/messages", method: "post"}
        %div.input-box
          %input.input-box__text#message_content{:placeholder=>"type a message", :type=>"text", :name=>"message[content]"}
            %label.image-label
              = fa_icon 'picture-o', class: 'icon'        
              %input.hidden{type: "file"}
        %input.new-message__submit-btn{type: "submit", value: "Send"}